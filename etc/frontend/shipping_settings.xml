<?xml version="1.0" ?>
<carriers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Netresearch_ShippingCore/etc/shipping_settings.xsd">
    <carrier code="glsgermany">
        <compatibilityData>
            <rule id="showLocationInputIfDepositServiceIsEnabled">
                <masters>
                    <master>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_DEPOSIT.enabled</master>
                </masters>
                <triggerValue>*</triggerValue>
                <action>show</action>
                <subjects>
                    <subject>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_DEPOSIT.details</subject>
                </subjects>
            </rule>
            <rule id="disableOtherServicesIfFlexDeliveryIsSelected">
                <masters>
                    <master>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_FLEX_DELIVERY</master>
                </masters>
                <subjects>
                    <subject>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_DEPOSIT</subject>
                    <subject>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_GUARANTEED24</subject>
                </subjects>
                <triggerValue>*</triggerValue>
                <action>disable</action>
                <errorMessage translate="true">Please choose only one of %1.</errorMessage>
            </rule>
            <rule id="disableOtherServicesIfDepositServiceIsSelected">
                <masters>
                    <master>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_DEPOSIT</master>
                </masters>
                <subjects>
                    <subject>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_FLEX_DELIVERY</subject>
                    <subject>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_GUARANTEED24</subject>
                </subjects>
                <triggerValue>*</triggerValue>
                <action>disable</action>
                <errorMessage translate="true">Please choose only one of %1.</errorMessage>
            </rule>
            <rule id="disableOtherServicesIfG24ServiceIsSelected">
                <masters>
                    <master>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_GUARANTEED24.enabled</master>
                </masters>
                <subjects>
                    <subject>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_FLEX_DELIVERY</subject>
                    <subject>GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_DEPOSIT</subject>
                </subjects>
                <triggerValue>*</triggerValue>
                <action>disable</action>
            </rule>
        </compatibilityData>
    </carrier>
</carriers>
