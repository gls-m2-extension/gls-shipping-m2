<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- # virtual types -->
    <virtualType name="GlsGermany\Shipping\Model\Pipeline\Rate\RateResponseProcessor\Virtual" type="Netresearch\ShippingCore\Model\Pipeline\Rate\RateResponseProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="carrierDetails" xsi:type="object">Netresearch\ShippingCore\Model\Pipeline\Rate\ResponseProcessor\CarrierDetails</item>
                <item name="freeShipping" xsi:type="object">Netresearch\ShippingCore\Model\Pipeline\Rate\ResponseProcessor\FreeShipping</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="GlsGermany\Shipping\Model\Rate\Emulation\RatesManagement\Virtual" type="Netresearch\ShippingCore\Model\Rate\Emulation\RatesManagement">
        <arguments>
            <argument name="rateRequestService" xsi:type="object">GlsGermany\Shipping\Model\Rate\Emulation\RateRequestService\Virtual</argument>
            <argument name="proxyConfig" xsi:type="object">GlsGermany\Shipping\Model\Config\ModuleConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="GlsGermany\Shipping\Model\Rate\Emulation\RateRequestService\Virtual" type="Netresearch\ShippingCore\Model\Rate\Emulation\RateRequestService">
        <arguments>
            <argument name="responseProcessor" xsi:type="object">GlsGermany\Shipping\Model\Pipeline\Rate\RateResponseProcessor\Virtual</argument>
        </arguments>
    </virtualType>
    <virtualType name="GlsGermany\Shipping\Model\Rate\Emulation\RatesManagement\Proxy\Virtual" type="Netresearch\ShippingCore\Model\Rate\Emulation\RatesManagement\Proxy">
        <arguments>
            <argument name="instanceName" xsi:type="string">GlsGermany\Shipping\Model\Rate\Emulation\RatesManagement\Virtual</argument>
        </arguments>
    </virtualType>
    <virtualType name="GlsGermany\Shipping\ViewModel\Adminhtml\System\InfoBox\Virtual" type="Netresearch\ShippingCore\ViewModel\Adminhtml\System\InfoBox">
        <arguments>
            <argument name="version" xsi:type="object">GlsGermany\Shipping\Model\Config\ModuleConfig</argument>
        </arguments>
    </virtualType>

    <!-- # argument di overrides -->
    <type name="GlsGermany\Shipping\Model\Carrier\GlsGermany">
        <arguments>
            <argument name="ratesManagement" xsi:type="object">GlsGermany\Shipping\Model\Rate\Emulation\RatesManagement\Proxy\Virtual</argument>
        </arguments>
    </type>
    <type name="Netresearch\ShippingCore\Model\LabelStatus\LabelStatusManagement">
        <arguments>
            <argument name="carrierCodes" xsi:type="array">
                <item name="glsgermany" xsi:type="const">GlsGermany\Shipping\Model\Carrier\GlsGermany::CARRIER_CODE</item>
            </argument>
        </arguments>
    </type>
</config>
