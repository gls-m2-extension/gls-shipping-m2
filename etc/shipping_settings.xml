<?xml version="1.0" ?>
<carriers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:module:Netresearch_ShippingCore/etc/shipping_settings.xsd">
    <carrier code="glsgermany">
        <serviceOptions>
            <shippingOption code="GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_FLEX_DELIVERY" available="carriers/glsgermany/additional_services/flexdelivery">
                <label translate="true">FlexDeliveryService</label>
                <sortOrder>10</sortOrder>
                <routes>
                    <route>
                        <origin>DE</origin>
                        <includeDestinations>
                            <destination>DE</destination>
                            <destination>AT</destination>
                            <destination>BE</destination>
                            <destination>BG</destination>
                            <destination>CZ</destination>
                            <destination>DK</destination>
                            <destination>ES</destination>
                            <destination>ES</destination>
                            <destination>FI</destination>
                            <destination>FR</destination>
                            <destination>GR</destination>
                            <destination>HR</destination>
                            <destination>HU</destination>
                            <destination>IE</destination>
                            <destination>IT</destination>
                            <destination>LU</destination>
                            <destination>NL</destination>
                            <destination>NO</destination>
                            <destination>PL</destination>
                            <destination>PT</destination>
                            <destination>RO</destination>
                            <destination>SI</destination>
                            <destination>SK</destination>
                            <destination>UK</destination>
                        </includeDestinations>
                    </route>
                </routes>
                <inputs>
                    <input code="enabled">
                        <inputType>checkbox</inputType>
                        <label translate="true">Enable FlexDeliveryService</label>
                        <tooltip translate="true">Please agree that your email address may be transmitted to and used by GLS or select another shipping method.</tooltip>
                        <comment>
                            <content translate="true">I agree that my email address may be transmitted to and used by GLS Germany GmbH &amp; Co. OHG for the purpose of delivery notification and, if applicable, parcel redirection. I can revoke this consent at any time by sending a message to the following address: %1. Please note that it is not possible to use this service without transmitting the email address.</content>
                        </comment>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption
                    code="GlsGermany\Shipping\Model\ShippingSettings\ShippingOption\Codes::CHECKOUT_SERVICE_DEPOSIT"
                    available="carriers/glsgermany/additional_services/deposit">
                <label translate="true">DepositService</label>
                <sortOrder>20</sortOrder>
                <inputs>
                    <input code="details">
                        <sortOrder>10</sortOrder>
                        <label translate="true">Place of Deposit</label>
                        <labelVisible>false</labelVisible>
                        <inputType>text</inputType>
                        <tooltip translate="true">Name a secure location on your premise where GLS can place the parcel.</tooltip>
                        <placeholder translate="true">e.g. shed, garage, or patio</placeholder>
                        <validationRules>
                            <rule name="validate-no-html-tags"/>
                            <rule name="nrshipping-validate-no-special-chars"/>
                        </validationRules>
                    </input>
                </inputs>
            </shippingOption>
        </serviceOptions>
        <metadata>
            <color>#172154</color>
        </metadata>
    </carrier>
</carriers>
