<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="account" translate="label comment" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="0">
        <label>Account Settings</label>
        <field id="sandboxmode" translate="label comment" type="Netresearch\ConfigFields\Model\Type\Checkbox"
               sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Enable Sandbox Mode</label>
            <comment>GLS provides test endpoints for web service operations. Select this option to use the test environment.</comment>
        </field>

        <field id="api_username" translate="label comment" type="text"
               sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>User Name</label>
            <comment>Enter your API user name.</comment>
        </field>

        <field id="api_password" translate="label comment" type="obscure"
               sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Password</label>
            <comment>Observe upper and lower case when entering the API password.</comment>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>

        <field id="customer_id" translate="label comment" type="text"
               sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Customer ID</label>
            <comment>This information will be provided to you by your depot or can be found in your GLS account settings.</comment>
        </field>

        <field id="contact_id" translate="label comment" type="text"
               sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Contact ID</label>
            <comment>This information will be provided to you by your depot or can be found in your GLS account settings.</comment>
        </field>

        <field id="broker_reference" showInDefault="1" showInWebsite="1" showInStore="0"
               sortOrder="60" translate="label comment" type="text">
            <label>Broker Reference</label>
            <comment>Reference to the GLS partner</comment>
        </field>
    </group>
</include>
