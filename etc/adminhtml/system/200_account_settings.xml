<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="account" translate="label comment" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="0">
        <label>Account Settings</label>
        <field id="sandboxmode" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="30"
               translate="label comment" type="Netresearch\ConfigFields\Model\Type\Checkbox">
            <label>Enable Sandbox Mode</label>
            <comment>GLS provides test endpoints for web service operations. Select this option to use the test environment.</comment>
        </field>
        <field id="api_username" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="40" translate="label comment" type="text">
            <label>User Name</label>
            <comment>Enter your API user name.</comment>
            <depends>
                <field id="sandboxmode">0</field>
            </depends>
        </field>

        <field id="api_password" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="50" translate="label comment" type="obscure">
            <label>Password</label>
            <comment>Observe upper and lower case when entering the password.</comment>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
            <depends>
                <field id="sandboxmode">0</field>
            </depends>
        </field>
    </group>
</include>
