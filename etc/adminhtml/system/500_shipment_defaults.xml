<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="shipment_defaults" translate="label comment" sortOrder="500" showInDefault="1" showInWebsite="1" showInStore="0">
        <label>Shipment Defaults</label>
        <comment><![CDATA[These settings will be used for automatic shipping label creation. If a label cannot be created with your configured defaults, the order must be processed manually. Use the <em>Label Status</em> column in the orders listing to identify those orders.]]></comment>

        <field id="label_size" translate="label" type="Netresearch\ConfigFields\Model\Type\Radioset"
               sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Label Size</label>
            <source_model>GlsGermany\Shipping\Model\Config\Source\LabelSize</source_model>
        </field>

        <field id="terms_of_trade" translate="label" type="select"
               sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Terms of Trade</label>
            <source_model>GlsGermany\Shipping\Model\Config\Source\TermsOfTrade</source_model>
        </field>

        <field id="send_shipper" translate="label button_label" type="Netresearch\ConfigFields\Model\Type\Checkbox"
               sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Send Shipper Address</label>
            <button_label><![CDATA[If enabled, the <em>Shipping Origin</em> setting will be included with label requests. Otherwise the shipper address from the GLS account settings will be used.]]></button_label>
        </field>
    </group>
</include>
