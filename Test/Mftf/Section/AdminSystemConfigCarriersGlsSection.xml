<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminSystemConfigCarriersGlsSection">
        <!-- GLS Germany delivery method group -->
        <element name="glsCarrierGroup" type="button" selector="#carriers_glsgermany-head"/>
        <element name="glsCarrierGroupExpanded" type="button" selector="#carriers_glsgermany-head:not(.open)"/>

        <!-- General Settings sub-group -->
        <element name="glsCarrierGeneralSettingsSubGroup" type="button"
                 selector="#carriers_glsgermany_general-head"/>
        <element name="glsCarrierGeneralSettingsSubGroupExpanded" type="button"
                 selector="#carriers_glsgermany_general-head:not(.open)"/>
        <!-- Account Settings sub-group -->
        <element name="glsCarrierAccountSettingsSubGroup" type="button"
                 selector="#carriers_glsgermany_account-head"/>
        <element name="glsCarrierAccountSettingsSubGroupExpanded" type="button"
                 selector="#carriers_glsgermany_account-head:not(.open)"/>
        <!-- Checkout Presentation sub-group -->
        <element name="glsCarrierCheckoutSettingsSubGroup" type="button"
                 selector="#carriers_glsgermany_checkout-head"/>
        <element name="glsCarrierCheckoutSettingsSubGroupExpanded" type="button"
                 selector="#carriers_glsgermany_checkout-head:not(.open)"/>

        <!-- General Settings fields -->
        <element name="glsCarrierEnabledSetting" type="checkbox"
                 selector="#carriers_glsgermany_general_active"/>
        <element name="glsCarrierCountriesSettingDefault" type="radio"
                 selector="//label[@for='carriers_glsgermany_general_sallowspecific0']"/>
        <element name="glsCarrierCountriesSettingCustomized" type="radio"
                 selector="//label[@for='carriers_glsgermany_general_sallowspecific1']"/>
        <element name="glsCarrierLoggingEnabledSetting" type="checkbox"
                 selector="#carriers_glsgermany_general_logging"/>
        <element name="glsCarrierLoggingSettingErrors" type="radio"
                 selector="//label[@for='carriers_glsgermany_general_logging_group_loglevel400']"/>
        <element name="glsCarrierLoggingSettingInfo" type="radio"
                 selector="//label[@for='carriers_glsgermany_general_logging_group_loglevel200']"/>

        <!-- Account Settings fields -->
        <element name="glsCarrierSandboxEnabledSetting" type="checkbox"
                 selector="#carriers_glsgermany_account_sandboxmode"/>
        <element name="glsCarrierApiUserNameSetting" type="input"
                 selector="#carriers_glsgermany_account_api_username"/>
        <element name="glsCarrierApiPasswordSetting" type="input"
                 selector="#carriers_glsgermany_account_api_password"/>

        <!-- Checkout Presentation fields -->
        <element name="glsCarrierCheckoutTitle" type="input"
                 selector="#carriers_glsgermany_checkout_title"/>
        <element name="glsCarrierCheckoutSortOrder" type="input"
                 selector="#carriers_glsgermany_checkout_sort_order"/>
        <element name="glsCarrierEmulatedCarrier" type="select"
                 selector="#carriers_glsgermany_checkout_emulated_carrier"/>
        <element name="glsCarrierUnavailabilitySettingHide" type="radio"
                 selector="//label[@for='carriers_glsgermany_checkout_showmethod0']"/>
        <element name="glsCarrierUnavailabilitySettingShow" type="radio"
                 selector="//label[@for='carriers_glsgermany_checkout_showmethod1']"/>
        <element name="glsCarrierUnavailabilityMessage" type="textarea"
                 selector="#carriers_glsgermany_checkout_specificerrmsg"/>

    </section>
</sections>
